  "nodejs": false,
  "toolbar": true,
  "window": {
    "title": "whispeer",
    "toolbar": true,
    "icon": "assets/img/favicons/touch-icon-ipad.png",
    "postion": "center",
    "height": 999999,
    "width": 999999,
    "fullscreen": false
  },
  "browserslist": [
    "last 2 versions",
    "ie >= 11",
    "> 0.5% in DE",
    "iOS > 7"
  ],
  "dependencies": {
    "amanda": "~0.4.7",
    "angular": "1.6.5",
    "angular-touch": "1.6.5",
    "angular-ui-router": "~0.3.1",
