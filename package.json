    "es6-shim": "^0.35.3",
    "font-awesome": "4.6.3",
    "idb": "^2.0.4",
    "jquery": "~3.1.0",
    "normalize.css": "^4.2.0",
    "progressbar.js": "^1.0.1",
    "qtip2": "~2.2.0",
    "raven-js": "^3.20.1",
    "reflect-metadata": "^0.1.8",
    "requirejs": "^2.2.0",
    "rimraf": "^2.6.2",
    "sjcl": "git+https://github.com/whispeer/sjcl.git#custom-build",
    "socket.io-client": "~2.0.0",
    "whatwg-fetch": "^2.0.1"
  },
  "devDependencies": {
    "@sentry/cli": "^1.26.1",
    "@types/bluebird": "=3.0.36",
    "@types/jquery": "^2.0.39",
    "@types/node": "^6.0.52",
    "@types/socket.io-client": "^1.4.29",
    "@types/webpack": "^2.0.0",
    "autoprefixer": "^7.2.5",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.0.0",
    "babel-preset-env": "^1.5.2",
    "bytes": "^2.4.0",
    "css-loader": "^0.28.8",
    "deep-equal": "^1.0.1",
    "eslint": "^3.15.0",
    "exports-loader": "^0.6.3",
    "expose-loader": "^0.7.1",
    "express": "^4.14.0",
    "extend": "^3.0.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.6",
    "git-rev-sync": "^1.4.0",
    "html-loader": "^0.4.4",
