    "imports-loader": "^0.6.5",
    "jasmine": "^2.4.1",
    "json-loader": "^0.5.4",
    "karma-chrome-launcher": "^2.0.0",
    "karma-firefox-launcher": "^1.0.0",
    "karma-jasmine": "^1.0.2",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-requirejs": "^1.0.0",
    "karma-safari-launcher": "^1.0.0",
    "karma": "^1.2.0",
    "less-loader": "^4.0.5",
    "less": "^2.7.3",
    "ngtemplate-loader": "^1.3.1",
    "npm-run-all": "^4.1.2",
    "phantomjs-prebuilt": "^2.1.7",
    "postcss-loader": "^2.0.10",
    "style-loader": "^0.19.1",
    "ts-loader": "^3.1.1",
    "tslint": "^4.0.2",
    "typescript": "~2.6.2",
    "typings": "^2.0.0",
    "unused-files-webpack-plugin": "^3.0.0",
    "wait-on": "^2.1.0",
    "watch": "^1.0.2",
    "webpack-bundle-analyzer": "^2.6.0",
    "webpack-bundle-size-analyzer": "^2.6.0",
    "webpack-dev-middleware": "^2.0.2",
    "webpack-sha-hash": "^2.0.0",
    "webpack-subresource-integrity": "^1.0.3",
    "webpack": "^3.8.1",
    "worker-loader": "^1.1.0"
  },
  "scripts": {
    "development": "npm-run-all --parallel static:watch less:static:watch serve",
    "serve": "wait-on static && node server.js",

    "test": "karma start --single-run --browsers PhantomJS",

    "lint": "eslint assets/js",
    "clean": "rimraf dist static",
    "lint:fix": "eslint --fix assets/js",

    "less:static": "lessc --include-path=node_modules assets/less/static.less staticRaw/assets/css/static.css",
    "less:static:watch": "watch 'npm run less:static' assets/less",

    "static:watch": "npm run build:static -- --watch",
    "build:static": "bundle exec jekyll build",
    "build:webpack": "NODE_ENV=production webpack -p",
    "build": "npm-run-all clean copy build:static build:webpack",

    "copy": "npm-run-all copy:*",
    "copy:fontAwesome": "cp node_modules/font-awesome/css/font-awesome.min.css staticRaw/_sass/font-awesome.scss",
    "copy:fonts": "cp -r node_modules/font-awesome/fonts/ assets/fonts/",
    "copy:normalize": "cp node_modules/normalize.css/normalize.css staticRaw/_sass/normalize.scss"
  }
}
